<%= form_for :issue, method:"post",url:"/issue", html: {class: "form-horizontal", role: "form"} do |f| %>
<div class="form-group">
	<%= f.hidden_field :from, value: current_user.display_name %>
	<%= f.hidden_field :email, value: current_user.email %>
	<%= f.label :from, class: "col-sm-2 control-label" %>
	<div class="col-sm-10">
		<p class="form-control-static">
			<%= current_user.display_name %>
		</p>
	</div>
</div>
<div class="form-group">
	<%= f.label :comments, class: "col-sm-2 control-label"%>
	<div class="col-sm-10">
		<%= f.text_area :comments, class: "form-control", rows: "3", required: true %>
	</div>
</div>
<div class="form-group">
	<%= f.label :type, class: "col-sm-2 control-label"%>
	<div class="col-sm-10">
		<%= f.select :type, ["Bug","Enhancement"], {}, class: "form-control" %>
	</div>
</div>
<%= button_tag "Close", type: "button", class: "btn btn-default", data: {dismiss: "modal"} if @in_modal %>
<%= submit_tag "Send", class: "btn btn-primary"%>
<% end %>
